<!DOCTYPE html>
<html>
  <head>
    <title>Jamify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  <% if current_user %>
    <script>
      window.user = <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      
    </script>
  <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>

